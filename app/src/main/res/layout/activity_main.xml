<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <ScrollView
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewMainTitle"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Automation Control"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimary"/>
                <Button
                    android:id="@+id/btnCheckSwitchStatus"
                    android:onClick="clickGetSwitchStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check Switch Status"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardSwitch1"
                    android:onClick="clickSwitch"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/control1"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/ic_compare_arrows_black_24dp"
                            android:background="@drawable/grey"/>
                        <TextView
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/labelSwitch1"
                            android:text="Switch 1"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/cardSwitch2"
                    android:onClick="clickSwitch"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/control2"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/ic_compare_arrows_black_24dp"
                            android:background="@drawable/grey"/>
                        <TextView
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/labelSwitch2"
                            android:text="Switch 2"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardSwitch3"
                    android:onClick="clickSwitch"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/control3"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/ic_compare_arrows_black_24dp"
                            android:background="@drawable/grey"/>
                        <TextView
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/labelSwitch3"
                            android:text="Switch 3"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/cardSwitch4"
                    android:onClick="clickSwitch"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/control4"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/ic_compare_arrows_black_24dp"
                            android:background="@drawable/grey"/>
                        <TextView
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/labelSwitch4"
                            android:text="Switch 4"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardSwitch5"
                    android:onClick="clickSwitch"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/control5"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/ic_compare_arrows_black_24dp"
                            android:background="@drawable/grey"/>
                        <TextView
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/labelSwitch5"
                            android:text="Switch 5"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/cardSwitch6"
                    android:onClick="clickSwitch"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/control6"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/ic_compare_arrows_black_24dp"
                            android:background="@drawable/grey"/>
                        <TextView
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/labelSwitch6"
                            android:text="Switch 6"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardSwitch7"
                    android:onClick="clickSwitch"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/control7"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/ic_compare_arrows_black_24dp"
                            android:background="@drawable/grey"/>
                        <TextView
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/labelSwitch7"
                            android:text="Switch 7"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/cardSwitch8"
                    android:onClick="clickSwitch"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/control8"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/ic_compare_arrows_black_24dp"
                            android:background="@drawable/grey"/>
                        <TextView
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/labelSwitch8"
                            android:text="Switch 8"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>
